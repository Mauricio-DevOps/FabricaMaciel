@{
    ViewData["Title"] = "Início";
    var userName = ViewData["LoggedUserName"] as string ?? "usuário";
    var loginMessage = TempData["LoginMessage"] as string;
}

<div class="text-center">
    <h1 class="display-4 mb-3">Bem-vindo, @userName!</h1>
    <p class="lead">Você está autenticado com sucesso no Fabrica.</p>
    @if (!string.IsNullOrEmpty(loginMessage))
    {
        <div class="alert alert-success mt-4" role="alert">
            @loginMessage
        </div>
    }
</div>
