@model Fabrica.Models.RegisterViewModel
@{
    ViewData["Title"] = "Criar conta";
}

<section class="auth-container">
    <div class="card shadow-sm p-4 auth-card">
        <h1 class="mb-4 text-center">Criar nova conta</h1>
        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="mb-3">
                <label asp-for="UserName" class="form-label"></label>
                <input asp-for="UserName" class="form-control" autocomplete="name" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" autocomplete="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" autocomplete="new-password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="d-flex gap-2 flex-column flex-md-row">
                <button type="submit" class="btn btn-success flex-fill">Salvar</button>
                <a asp-action="Login" class="btn btn-outline-secondary flex-fill">Voltar para o login</a>
            </div>
            @if (ViewBag.Message is string message && !string.IsNullOrWhiteSpace(message))
            {
                <div class="alert alert-info mt-4" role="alert">
                    @message
                </div>
            }
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
